<Window x:Class="OrganiZer.NoteDetailEnter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrganiZer"
        mc:Ignorable="d"
        Title="NoteDetailEnter" Height="400" Width="600">
    <Grid Background="#181818">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.35*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Foreground="#dfdfdf" FontSize="26" Name="NoteOverhang" Background="#272727" BorderBrush="#202020" Height="40" Width="300"/>

        <TextBox Foreground="#dfdfdf" Name="NoteDescription" Background="#272727" Grid.Row="2" BorderBrush="#202020" Margin="50"/>
    </Grid>
</Window>
